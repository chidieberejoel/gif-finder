{
  "extends": [
    "airbnb-base",
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es2021": true,
    "jest": true,
    "amd": true
  },
  "rules": {
    "linebreak-style": 0,
    "global-require": 0,
    "quotes": [
      "error",
      "double"
    ]
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}